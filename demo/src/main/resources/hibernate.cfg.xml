<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- Replace ${DB_NAME} with your actual database name -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/DBProjeto</property>
        
        <!-- Use root as the username -->
        <property name="hibernate.connection.username">root</property>
        
        <!-- Replace 'yourRootPassword' with the actual root user password -->
        <property name="hibernate.connection.password">2003</property>

        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="Paciente"/>
    </session-factory>
</hibernate-configuration>
